#!@shell@
set -ue

ex_usage() {
    cat <<EOF
Usage: $(basename "$0") [OPTION]...

  -c COMMAND         shell command to run inside VM
  -C, --crosvm PATH  path to custom crosvm executable
  -k, --kernel PATH  path to custom kernel image
  -f, --rootfs PATH  path to custom root file system image
EOF
    exit "$1"
}

args="$(@getopt@ -s sh -l crosvm:,help,kernel:,rootfs: -o c:C:hk:f: -- "$@" || exit 1)"
eval set -- "$args"

command=
crosvm=@crosvm@
kernel=@kernel@
rootfs=@rootfs@

while :
do
    case "$1" in
	-c)
	    shift
	    command="$1"
	    shift
	    ;;
        -C|--crosvm)
            shift
            crosvm="$1"
	    shift
            ;;
	-h|--help)
	    ex_usage 0
	    ;;
        -k|--kernel)
            shift
            kernel="$1"
	    shift
            ;;
        -f|--rootfs)
            shift
            rootfs="$1"
	    shift
            ;;
        --)
            shift
            break
            ;;
    esac
done

if [ "$#" -ne 0 ]; then
    ex_usage 1 >&2
fi

set +e
if [ -n "$XDG_RUNTIME_DIR" ]
then
    set -- -s "$XDG_RUNTIME_DIR"
    if [ -n "$WAYLAND_DISPLAY" ]
    then set -- "$@" --wayland-sock "$XDG_RUNTIME_DIR/$WAYLAND_DISPLAY"
    fi
fi
set -e

exec "$crosvm" run "$@" \
    -p init=/sbin/init \
    -p "spectrumcmd=$(printf %s "$command" | base64)" \
    --root "$rootfs" \
    "$kernel"
